{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/your-org/whatsapp-transcriber/schema/run_manifest.schema.json",
  "title": "RunManifest",
  "description": "Schema for pipeline run manifest tracking execution progress and status",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "root",
    "chat_file",
    "run_dir",
    "start_time",
    "steps",
    "summary"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Semantic version of this manifest schema",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0"]
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this pipeline run",
      "minLength": 1
    },
    "root": {
      "type": "string",
      "description": "Root directory for the WhatsApp export"
    },
    "chat_file": {
      "type": "string",
      "description": "Path to the chat export text file"
    },
    "run_dir": {
      "type": "string",
      "description": "Directory where run outputs are stored"
    },
    "start_time": {
      "type": "string",
      "description": "ISO 8601 timestamp when the run started",
      "format": "date-time",
      "examples": ["2024-11-20T10:30:00Z"]
    },
    "end_time": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when the run completed, or null if still running",
      "format": "date-time",
      "examples": ["2024-11-20T10:35:00Z", null]
    },
    "steps": {
      "type": "object",
      "description": "Progress tracking for each pipeline step",
      "additionalProperties": {
        "$ref": "#/definitions/StepProgress"
      },
      "examples": [
        {
          "M1_parse": {
            "name": "M1_parse",
            "status": "ok",
            "total": 100,
            "done": 100,
            "error": null,
            "started_at": "2024-11-20T10:30:00Z",
            "ended_at": "2024-11-20T10:31:00Z"
          }
        }
      ]
    },
    "summary": {
      "type": "object",
      "description": "High-level summary of the run",
      "required": ["messages_total", "voice_total"],
      "properties": {
        "messages_total": {
          "type": "integer",
          "description": "Total number of messages processed",
          "minimum": 0
        },
        "voice_total": {
          "type": "integer",
          "description": "Total number of voice messages",
          "minimum": 0
        },
        "error": {
          "type": ["string", "null"],
          "description": "Error message if the run failed, null otherwise"
        },
        "resume_enabled": {
          "type": "boolean",
          "description": "Whether resume mode was enabled for this run"
        },
        "inputs": {
          "type": "object",
          "description": "Input file paths used by the run"
        },
        "outputs": {
          "type": "object",
          "description": "Output file paths produced by the run"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "definitions": {
    "StepProgress": {
      "type": "object",
      "description": "Progress tracking for a single pipeline step",
      "required": ["name", "status", "total", "done"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Step identifier (e.g., 'M1_parse', 'M2_media', 'M3_audio')",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "description": "Current status of the step",
          "enum": ["pending", "running", "ok", "failed", "skipped"]
        },
        "total": {
          "type": "integer",
          "description": "Total number of items to process in this step",
          "minimum": 0
        },
        "done": {
          "type": "integer",
          "description": "Number of items completed",
          "minimum": 0
        },
        "error": {
          "type": ["string", "null"],
          "description": "Error message if the step failed"
        },
        "started_at": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when the step started",
          "format": "date-time"
        },
        "ended_at": {
          "type": ["string", "null"],
          "description": "ISO 8601 timestamp when the step completed",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  }
}
